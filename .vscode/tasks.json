{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Dev Env",
      "type": "shell",
      "windows": {
        "command": "${workspaceFolder}/scripts/setup-dev.bat"
      },
      "linux": {
        "command": "${workspaceFolder}/scripts/setup-dev.sh"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Backend",
      "type": "shell",
      "command": "uv",
      "args": ["run", "main.py"],
      "options": {
        "cwd": "${workspaceFolder}/backend/src"
      }
    },
    {
      "label": "Run Frontend",
      "type": "npm",
      "script": "dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    },
    {
      "label": "Run Celery",
      "type": "shell",
      "command": "uv",
      "args": ["run", "main.py"],
      "options": {
        "cwd": "${workspaceFolder}/queue/src"
      }
    },
    {
      "label": "Run Flower",
      "type": "shell",
      "command": "uv",
      "args": ["run", "celery", "-A", "main", "flower", "--port=5555"],
      "options": {
        "cwd": "${workspaceFolder}/queue/src"
      }
    },
    {
      "label": "Deploy with docker-compose",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d", "--build"]
    }
  ]
}
